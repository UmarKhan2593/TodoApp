@{
    ViewData["Title"] = "Reset password confirmation";
    Layout = "~/Views/Shared/_NoLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 offset-md-3 mt-5 ">
        <div class="account-wall text-center py-5 mt-5">


            <a asp-area="Consumer" asp-controller="Home" asp-action="Index">
                <img class="profile-img" src="~/img/giftlocal.png" alt="GiftLocal">
            </a>

            <h1>Reset password confirmation</h1>
            <p class="mb-4">Your password has been reset.</p>
            <p class="mb-3">
                Go Back to
                <a asp-area="Identity"
                   asp-controller="Account"
                   asp-action="LogIn" class="text-center new-account">LogIn</a>
            </p>
        </div>
    </div>
</div>