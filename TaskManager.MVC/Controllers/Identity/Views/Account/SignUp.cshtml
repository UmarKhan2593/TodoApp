@model TaskManager.Presentation.Web.Infrastructure.Requests.Identity.User.CreateUserRequest

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_NoLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 offset-md-3 mt-5 ">
        <div class="account-wall text-center py-5 mt-5">

            <a asp-area="Consumer" asp-controller="Home" asp-action="Index">
                <img class="profile-img" src="~/img/giftlocal.png" alt="GiftLocal">
            </a>
            <h1 class="mb-4">Sign Up</h1>


            @*<div class="sign-wrapper">
                <a href="#" class="google d-flex">
                    <img class="pr-2" src="~/img/google.svg" alt="">
                    Sign up with Google
                </a>
                <a href="#" class="google d-flex">
                    <img class="pr-2" src="~/img/facebook.svg" alt="">
                    Sign up with Facebook
                </a>
            </div>
            <div class="or">
                <h2><span>or</span></h2>
            </div>*@

            <form asp-action="SignUp" class="form-signin">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group custom-inputs">
                    <input asp-for="FirstName" placeholder="@Html.DisplayNameFor(model => model.FirstName)" class="form-control  mb-4" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group custom-inputs">
                    <input asp-for="LastName" placeholder="@Html.DisplayNameFor(model => model.LastName)" class="form-control mb-4" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group custom-inputs">
                    <input asp-for="Email" placeholder="@Html.DisplayNameFor(model => model.Email)" class="form-control mb-4" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group custom-inputs">
                    <input asp-for="UserName" placeholder="@Html.DisplayNameFor(model => model.UserName)" class="form-control mb-4" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group custom-inputs">
                    <input asp-for="Password" placeholder="@Html.DisplayNameFor(model => model.Password)" class="form-control mb-4" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group custom-inputs">
                    <input asp-for="ConfirmPassword" placeholder="@Html.DisplayNameFor(model => model.ConfirmPassword)" class="form-control mb-4" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="SIGN UP" class="btn btn-lg  btn-block mb-3" />
                </div>

                <p class="mb-3">Already have an account? <a asp-area="Identity" asp-action="LogIn" class="text-center new-account">Sign In </a> </p>
            </form>

        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
