@model TaskManager.Presentation.Web.Infrastructure.Requests.Identity.Account.ForgotPasswordRequest

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_NoLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 offset-md-3 mt-5 ">
        <div class="account-wall text-center py-5 mt-5">

            <a asp-area="Consumer" asp-controller="Home" asp-action="Index">
                <img class="profile-img" src="~/img/giftlocal.png" alt="GiftLocal">
            </a>

            <h1>Recover Your Password</h1>
            <p class="mb-4">Use data that you entered during your registration.</p>
            <form asp-action="ForgotPassword" class="form-signin">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="custom-inputs form-group">
                    <input asp-for="Email" class="form-control mb-4" placeholder="@Html.DisplayNameFor(x=>x.Email)" required autofocus>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Send Reset Link" class="btn btn-lg  btn-block mb-3" />
                </div>

                <p class="mb-3">
                    Go Back to
                    <a asp-area="Identity" asp-action="LogIn" class="text-center new-account">Log In</a>
                </p>
            </form>
        </div>
    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
